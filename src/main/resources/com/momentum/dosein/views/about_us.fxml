<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400" prefWidth="600" styleClass="about-root" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.momentum.dosein.controllers.AboutUsController">

    <VBox alignment="CENTER" prefHeight="400.0" prefWidth="601.0" spacing="12">
   
        <!-- Title -->
        <HBox alignment="CENTER" spacing="5">
            <Label styleClass="heading" text="About" />
            <Label styleClass="heading-accent" text="Us" />
        </HBox>
   
        <!-- Subheading -->
        <Label styleClass="subheading" text="TEAM MOMENTUM" />
   
        <!-- Names (two lines, bold) -->
        <Label alignment="CENTER" maxWidth="460" styleClass="names-bold" text="Md. Majharul Islam || Md. Rijwan Kabir || Md. Obeduzzaman&#10;Banna Rani Sarkar || Md. A. Barik Sarkar" textAlignment="CENTER" wrapText="true" />
   
        <!-- Team photo -->
        <ImageView fx:id="teamImage" fitHeight="120" fitWidth="214" pickOnBounds="true" preserveRatio="false" />
   
        <!-- Footer lines -->
        <VBox alignment="CENTER" spacing="2">
            <Label styleClass="footer" text="Department of Computer Science &amp; Engineering" />
            <Label styleClass="footer" text="Daffodil International University, Bangladesh" />
        </VBox>
   
        <!-- Go back button -->
        <Button onAction="#handleGoBack" styleClass="go-back-button" text="Go back" />
    </VBox>
</AnchorPane>
