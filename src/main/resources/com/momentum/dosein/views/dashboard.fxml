<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.momentum.dosein.controllers.DashboardController"
            stylesheets="@../css/style.css"
            prefWidth="600" prefHeight="400">

    <center>
        <VBox spacing="10" alignment="TOP_CENTER">

            <!-- Greeting -->
            <VBox spacing="5" alignment="CENTER">
                <HBox alignment="CENTER">
                    <Label text="Hello, " styleClass="greeting-text"/>
                    <Label text="User" styleClass="greeting-user"/>
                    <Label text="!" styleClass="greeting-text"/>
                </HBox>
                <Label text="Your Health Matters â€” Stay on Track!" styleClass="subtitle-text"/>
            </VBox>

            <!-- Main Content -->
            <HBox spacing="15" alignment="TOP_LEFT">

                <!-- Left panel: Settings + Clock + Reminder List -->
                <VBox spacing="10">

                    <!-- Settings + Clock cards -->
                    <HBox spacing="10">
                        <Button onAction="#handleSettings" styleClass="card settings-card">
                            <graphic>
                                <ImageView fitWidth="24" fitHeight="24" preserveRatio="true">
                                    <Image url="@../images/gear.png"/>
                                </ImageView>
                            </graphic>
                            Settings
                        </Button>
                        <StackPane styleClass="card clock-card">
                            <Label fx:id="clockLabel" text="-- : -- --" styleClass="clock-text"/>
                        </StackPane>
                    </HBox>

                    <!-- Reminder panel -->
                    <StackPane styleClass="reminder-panel">
                        <ScrollPane fitToWidth="true" fitToHeight="true">
                            <VBox fx:id="reminderContainer" spacing="8">
                                <!-- ***** CORRECT padding declaration ***** -->
                                <padding>
                                    <Insets top="8" right="8" bottom="8" left="8"/>
                                </padding>
                            </VBox>
                        </ScrollPane>
                    </StackPane>
                </VBox>

                <!-- Right panel: Feature grid -->
                <GridPane hgap="10" vgap="10">
                    <Button onAction="#handleSetReminder"
                            styleClass="card feature-card"
                            GridPane.rowIndex="0" GridPane.columnIndex="0">
                        <graphic>
                            <ImageView fitWidth="32" fitHeight="32">
                                <Image url="@../images/pill.png"/>
                            </ImageView>
                        </graphic>
                        Set Reminder
                    </Button>
                    <Button onAction="#handleManage"
                            styleClass="card feature-card"
                            GridPane.rowIndex="0" GridPane.columnIndex="1">
                        <graphic>
                            <ImageView fitWidth="32" fitHeight="32">
                                <Image url="@../images/manage.png"/>
                            </ImageView>
                        </graphic>
                        Manage
                    </Button>
                    <Button onAction="#handleDoctors"
                            styleClass="card feature-card"
                            GridPane.rowIndex="1" GridPane.columnIndex="0">
                        <graphic>
                            <ImageView fitWidth="32" fitHeight="32">
                                <Image url="@../images/doctor.png"/>
                            </ImageView>
                        </graphic>
                        Doctors
                    </Button>
                    <Button onAction="#handleEmergency"
                            styleClass="card feature-card"
                            GridPane.rowIndex="1" GridPane.columnIndex="1">
                        <graphic>
                            <ImageView fitWidth="32" fitHeight="32">
                                <Image url="@../images/ambulance.png"/>
                            </ImageView>
                        </graphic>
                        Emergency
                    </Button>
                    <Button onAction="#handleAbout"
                            styleClass="card about-card"
                            GridPane.rowIndex="2" GridPane.columnIndex="0">
                        About Us
                    </Button>
                    <Button onAction="#handleSignOut"
                            styleClass="card signout-card"
                            GridPane.rowIndex="2" GridPane.columnIndex="1">
                        Sign Out
                    </Button>
                </GridPane>

            </HBox>
        </VBox>
    </center>
</BorderPane>
